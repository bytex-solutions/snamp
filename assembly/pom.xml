<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>snamp</artifactId>
        <groupId>com.itworks.snamp</groupId>
        <version>1.0.0</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>assembly</artifactId>
    <name>SNAMP Distribution Package</name>
    <description>Assembly of SNAMP Distribution Package</description>
    <packaging>karaf-assembly</packaging>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.karaf.tooling</groupId>
                <artifactId>karaf-maven-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <finalName>snamp</finalName>
                    <ignoreScopeProvided>true</ignoreScopeProvided>
                    <bootFeatures>
                        <feature>platform-feature</feature>
                    </bootFeatures>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <dependencies>
        <!--Karaf Framework should be the first dependency. See http://java.dzone.com/articles/assemble-your-custom-apache-->
        <dependency>
            <groupId>org.apache.karaf.features</groupId>
            <artifactId>framework</artifactId>
            <version>${karaf.version}</version>
            <type>kar</type>
        </dependency>
        <dependency>
            <groupId>com.itworks.snamp</groupId>
            <artifactId>platform-feature</artifactId>
            <version>1.0.0</version>
            <type>kar</type>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.itworks.snamp</groupId>
            <artifactId>http-adapter-feature</artifactId>
            <version>1.0.0</version>
            <type>kar</type>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.itworks.snamp</groupId>
            <artifactId>jmx-adapter-feature</artifactId>
            <version>1.0.0</version>
            <type>kar</type>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.itworks.snamp</groupId>
            <artifactId>nagios-adapter-feature</artifactId>
            <version>1.0.0</version>
            <type>kar</type>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.itworks.snamp</groupId>
            <artifactId>nrdp-adapter-feature</artifactId>
            <version>1.0.0</version>
            <type>kar</type>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.itworks.snamp</groupId>
            <artifactId>nsca-adapter-feature</artifactId>
            <version>1.0.0</version>
            <type>kar</type>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.itworks.snamp</groupId>
            <artifactId>snmp-adapter-feature</artifactId>
            <version>1.0.0</version>
            <type>kar</type>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.itworks.snamp</groupId>
            <artifactId>ssh-adapter-feature</artifactId>
            <version>1.0.0</version>
            <type>kar</type>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.itworks.snamp</groupId>
            <artifactId>syslog-adapter-feature</artifactId>
            <version>1.0.0</version>
            <type>kar</type>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.itworks.snamp</groupId>
            <artifactId>xmpp-adapter-feature</artifactId>
            <version>1.0.0</version>
            <type>kar</type>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.itworks.snamp</groupId>
            <artifactId>aggregator-connector-feature</artifactId>
            <version>1.0.0</version>
            <type>kar</type>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.itworks.snamp</groupId>
            <artifactId>jmx-connector-feature</artifactId>
            <version>1.0.0</version>
            <type>kar</type>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.itworks.snamp</groupId>
            <artifactId>rshell-connector-feature</artifactId>
            <version>1.0.0</version>
            <type>kar</type>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.itworks.snamp</groupId>
            <artifactId>snmp-connector-feature</artifactId>
            <version>1.0.0</version>
            <type>kar</type>
            <scope>compile</scope>
        </dependency>

        <dependency>
            <groupId>org.apache.karaf.features</groupId>
            <artifactId>standard</artifactId>
            <classifier>features</classifier>
            <version>${karaf.version}</version>
            <type>xml</type>
            <scope>runtime</scope>
        </dependency>
    </dependencies>
</project>