<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.bytex.snamp</groupId>
  <artifactId>snamp</artifactId>

  <packaging>pom</packaging>
  <name>SNAMP</name>
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven.compiler.source>1.7</maven.compiler.source>
    <maven.compiler.target>1.7</maven.compiler.target>
    <!--Global dependencies-->
    <karaf.version>3.0.3</karaf.version>
    <karaf.maxVersion>4</karaf.maxVersion>
    <osgi.version>4.3.1</osgi.version>
    <junit.version>4.11</junit.version>
    <jetty.version>8.1.15.v20140411</jetty.version>
    <gson.version>2.3.1</gson.version>
    <guava.version>18.0</guava.version>
    <jersey.version>1.18.1</jersey.version>
    <groovy.version>2.4.3</groovy.version>
    <apache.ivy.version>2.4.0</apache.ivy.version>
    <cellar.version>${karaf.version}</cellar.version>
    <jline.version>2.12</jline.version>
    <bouncycastle.version>1.52</bouncycastle.version>
    <aries.version>1.0.0</aries.version>
    <aries.api.version>1.1.0</aries.api.version>
    <jolokia.version>1.3.0</jolokia.version>     <!--Jolokia version should be aligned with HawtIO used in SNAMP Management Console-->
    <hazelcast.version>3.4.2</hazelcast.version>
    <thrift.version>0.9.2</thrift.version>
    <!--Versioning of SNAMP Components-->
    <snmp4j.version>2.3.3</snmp4j.version>
    <sshj.version>0.10.0</sshj.version>
    <snamp.framework.version>1.0.0</snamp.framework.version>
    <snamp.framework.maxVersion>2</snamp.framework.maxVersion>

    <snamp.adapters.http.version>1.0.0</snamp.adapters.http.version>
    <snamp.adapters.jmx.version>1.0.0</snamp.adapters.jmx.version>
    <snamp.adapters.nagios.version>1.0.0</snamp.adapters.nagios.version>
    <snamp.adapters.nrdp.version>1.0.0</snamp.adapters.nrdp.version>
    <snamp.adapters.nsca.version>1.0.0</snamp.adapters.nsca.version>
    <snamp.adapters.snmp.version>1.0.0</snamp.adapters.snmp.version>
    <snamp.adapters.ssh.version>1.0.0</snamp.adapters.ssh.version>
    <snamp.adapters.syslog.version>1.0.0</snamp.adapters.syslog.version>
    <snamp.adapters.xmpp.version>1.0.0</snamp.adapters.xmpp.version>
    <snamp.adapters.groovy.version>1.0.0</snamp.adapters.groovy.version>

    <snamp.jmxhelper.version>1.0.0</snamp.jmxhelper.version>
    <snamp.jaasconfig.version>1.0.0</snamp.jaasconfig.version>
    <snamp.management.version>1.0.0</snamp.management.version>

    <snamp.connectors.rshell.version>1.0.0</snamp.connectors.rshell.version>
    <snamp.connectors.aggregator.version>1.0.0</snamp.connectors.aggregator.version>
    <snamp.connectors.groovy.version>1.0.0</snamp.connectors.groovy.version>
    <snamp.connectors.ibmwmq.version>1.0.0</snamp.connectors.ibmwmq.version>
    <snamp.connectors.jmx.version>1.0.0</snamp.connectors.jmx.version>
    <snamp.connectors.mda.version>1.0.0</snamp.connectors.mda.version>
    <snamp.connectors.snmp.version>1.0.0</snamp.connectors.snmp.version>
    <snamp.connectors.modbus.version>1.0.0</snamp.connectors.modbus.version>
  </properties>
  <version>1.0.0</version>
  <organization>
        <name>Bytex</name>
        <url>http://snamp.bytex.com/</url>
  </organization>
  <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-dependency-plugin</artifactId>
                    <version>2.10</version>
                </plugin>
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>build-helper-maven-plugin</artifactId>
                    <version>1.9.1</version>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-resources-plugin</artifactId>
                    <version>2.6</version>
                </plugin>
                <plugin>
                    <groupId>org.apache.servicemix.tooling</groupId>
                    <artifactId>depends-maven-plugin</artifactId>
                    <version>1.2</version>
                </plugin>
                <plugin>
                    <groupId>org.apache.karaf.tooling</groupId>
                    <artifactId>karaf-maven-plugin</artifactId>
                    <version>${karaf.version}</version>
                    <extensions>true</extensions>
                </plugin>
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>exec-maven-plugin</artifactId>
                    <version>1.3.1</version>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-surefire-plugin</artifactId>
                    <version>2.12.4</version>
                </plugin>
                <plugin>
                    <groupId>org.apache.felix</groupId>
                    <artifactId>maven-bundle-plugin</artifactId>
                    <version>2.4.0</version>
                </plugin>
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>jaxb2-maven-plugin</artifactId>
                    <version>2.1</version>
                </plugin>
            </plugins>
        </pluginManagement>
  </build>
  <modules>
    <module>framework</module>
    <module>connectors</module>
    <module>adapters</module>
    <module>infrastructure/jmx-helpers</module>
    <module>third-party-libs/bundlized/snmp4j</module>
    <module>third-party-libs/bundlized/sshj</module>
    <module>infrastructure/management</module>
    <module>infrastructure/jaas-config</module>
    <module>features</module>
    <module>osgi-tests</module>

  </modules>
    <repositories>
        <repository>
            <id>maven</id>
            <name>Central Maven Repository</name>
            <url>http://repo1.maven.org/maven2/</url>
        </repository>
        <repository>
            <id>maven2</id>
            <name>Central Maven Repository</name>
            <url>http://repo2.maven.org/maven2/</url>
        </repository>
        <repository>
            <id>servicemix</id>
            <name>ServiceMix Maven Repository</name>
            <url>http://svn.apache.org/repos/asf/servicemix/m2-repo/</url>
        </repository>
    </repositories>

    <profiles>
        <profile>
            <id>Development</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <!-- skip tests -->
                <maven.test.skip>true</maven.test.skip>
            </properties>
        </profile>
        <profile>
            <id>Release</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <modules>
                <module>assembly</module>
            </modules>
            <properties>
                <!-- enable tests -->
                <maven.test.skip>false</maven.test.skip>
            </properties>
        </profile>
    </profiles>
</project>
