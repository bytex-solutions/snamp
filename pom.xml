<?xml version="1.0" encoding="UTF-8"?>
<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.snamp</groupId>
  <artifactId>snamp</artifactId>
  <version>1.0.0-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>snamp</name>
  <scm>
    <developerConnection>scm:git:git@github.com:sakno/snamp.git</developerConnection>
  </scm>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-release-plugin</artifactId>
        <version>2.4.1</version>
        <configuration>
          <autoVersionSubmodules>true</autoVersionSubmodules>
          <tagNameFormat>@{project.version}</tagNameFormat>
          <goals>package</goals>
          <useReleaseProfile>false</useReleaseProfile>  <!-- This should be reviewed when we will have javadocs -->
        </configuration>
      </plugin>
    </plugins>
  </build>
  <modules>
    <module>agent</module>
    <module>adapters</module>
    <module>connectors</module>
    <module>licensing</module>
    <module>tests</module>
  </modules>
</project>
