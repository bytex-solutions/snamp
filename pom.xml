<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.itworks.snamp</groupId>
  <artifactId>snamp</artifactId>

  <packaging>pom</packaging>
  <name>snamp</name>
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven.compiler.source>1.7</maven.compiler.source>
    <maven.compiler.target>1.7</maven.compiler.target>
    <com.itworks.snamp.licensing.version>1.0.0</com.itworks.snamp.licensing.version>
  </properties>
    <version>1.0.0</version>
    <organization>
        <name>IT Works</name>
        <url>http://www.itworks.com/snamp</url>
  </organization>
  <scm>
    <developerConnection>scm:git:git@github.com:sakno/snamp.git</developerConnection>
    <tag>HEAD</tag>
  </scm>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-release-plugin</artifactId>
        <version>2.4.1</version>
        <configuration>
          <autoVersionSubmodules>true</autoVersionSubmodules>
          <tagNameFormat>@{project.version}</tagNameFormat>
          <goals>package</goals>
          <useReleaseProfile>false</useReleaseProfile>  <!-- This should be reviewed when we will have javadocs -->
        </configuration>
      </plugin>
    </plugins>
  </build>
  <modules>
    <module>framework</module>
    <module>connectors</module>
    <module>adapters</module>
    <module>license-generator</module>
    <module>infrastructure/licensing</module>
    <module>infrastructure/hawtio-console</module>
    <module>infrastructure/jmx2json</module>
    <module>third-party-libs/bundlized/snmp4j</module>
    <module>third-party-libs/bundlized/sshj</module>
    <module>infrastructure/management</module>
    <module>infrastructure/jaas-config</module>
    <module>features</module>
    <module>osgi-tests</module>
  </modules>
    <repositories>
        <repository>
            <id>oosnmpRepo</id>
            <name>OOSNMP.COM Repository</name>
            <url>https://server.oosnmp.net/dist/release</url>
        </repository>
        <repository>
            <id>maven</id>
            <name>Central Maven Repository</name>
            <url>http://repo1.maven.org/maven2/</url>
        </repository>
    </repositories>

    <profiles>
        <profile>
            <id>development</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <properties>
                <!-- skip tests by default -->
                <maven.test.skip>true</maven.test.skip>
            </properties>
        </profile>
    </profiles>
</project>
