<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.snamp</groupId>
  <artifactId>snamp</artifactId>
  <version>1.0.0</version>
  <packaging>pom</packaging>
  <name>snamp</name>
  <scm>
    <developerConnection>scm:git:git@github.com:sakno/snamp.git</developerConnection>
    <tag>HEAD</tag>
  </scm>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-release-plugin</artifactId>
        <version>2.4.1</version>
        <configuration>
          <autoVersionSubmodules>true</autoVersionSubmodules>
          <tagNameFormat>@{project.version}</tagNameFormat>
          <goals>package</goals>
          <useReleaseProfile>false</useReleaseProfile>  <!-- This should be reviewed when we will have javadocs -->
        </configuration>
      </plugin>
    </plugins>
  </build>
  <modules>
    <module>agent</module>
    <module>adapters</module>
    <module>connectors</module>
    <module>licensing</module>
    <module>tests</module>
    <module>rest-manager</module>
    <module>examples</module>
  </modules>
    <repositories>
        <repository>
            <id>oosnmpRepo</id>
            <name>oosnmp.com Repository</name>
            <url>https://server.oosnmp.net/dist/release</url>
        </repository>
        <repository>
            <id>jspfRepo</id>
            <name>formreturn.com Repository</name>
            <url>http://maven.formreturn.com/repository</url>
        </repository>
    </repositories>
</project>
