<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>supervisors</artifactId>
        <groupId>com.bytex.snamp.supervisors</groupId>
        <version>2.0.0</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <name>Default Supervisor</name>
    <description>A framework for building custom supervisors</description>
    <artifactId>default</artifactId>
    <version>${snamp.supervisors.version}</version>
    <packaging>bundle</packaging>
    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>test</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>snamp-${project.artifactId}-supervisor</Bundle-SymbolicName>
                        <Export-Package>
                            com.bytex.snamp.connector.health.triggers;
                            com.bytex.snamp.connector.attributes.checkers;
                            com.bytex.snamp.supervision.def
                        </Export-Package>
                        <DynamicImport-Package>*</DynamicImport-Package>
                        <Bundle-Activator>com.bytex.snamp.supervision.def.DefaultSupervisorActivator</Bundle-Activator>
                        <!--SNAMP specific header-->
                        <Provide-Capability>com.bytex.snamp.supervisor; type=default</Provide-Capability>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <dependencies>
        <dependency>
            <scope>provided</scope>
            <groupId>com.bytex.snamp</groupId>
            <artifactId>framework</artifactId>
            <version>${snamp.version}</version>
        </dependency>
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.core</artifactId>
        </dependency>
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.compendium</artifactId>
        </dependency>
        <dependency>
            <groupId>com.google.guava</groupId>
            <artifactId>guava</artifactId>
        </dependency>
        <dependency>
            <groupId>org.codehaus.groovy</groupId>
            <artifactId>groovy</artifactId>
            <classifier>indy</classifier>
        </dependency>
        <dependency>
            <groupId>com.bytex.snamp</groupId>
            <artifactId>scripting</artifactId>
            <version>${snamp.scripting.version}</version>
        </dependency>
        <dependency>
            <groupId>com.google.code.findbugs</groupId>
            <artifactId>jsr305</artifactId>
        </dependency>
        <dependency>
            <groupId>org.codehaus.jackson</groupId>
            <artifactId>jackson-mapper-asl</artifactId>
        </dependency>
        <!--Test dependencies-->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
        </dependency>
        <dependency>
            <groupId>com.bytex.snamp</groupId>
            <artifactId>internal-services</artifactId>
            <version>${snamp.services.version}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
</project>