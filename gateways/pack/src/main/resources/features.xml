<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<features xmlns="http://karaf.apache.org/xmlns/features/v1.2.0" name="snamp-gateways">
    <repository>mvn:org.apache.karaf.features/enterprise/${karaf.version}/xml/features</repository>

    <feature name="snamp-groovy-gateway" description="SNAMP Groovy Gateway" version="${snamp.gateway.groovy.version}">
        <feature version="[${snamp.version}, ${snamp.maxVersion})">snamp-core</feature>
        <feature version="[${snamp.version}, ${snamp.maxVersion})">snamp-scripting-support</feature>
        <bundle start="true">mvn:com.bytex.snamp/groovy-gateway/${snamp.gateway.groovy.version}</bundle>
    </feature>

    <feature name="snamp-http-gateway" description="SNAMP HTTP Gateway" version="${snamp.gateway.http.version}">
        <feature version="[${snamp.version}, ${snamp.maxVersion})">snamp-core</feature>
        <feature version="[${snamp.version}, ${snamp.maxVersion})">snamp-web-support</feature>
        <feature version="[${snamp.version}, ${snamp.maxVersion})">snamp-jmx-support</feature>
        <!--<bundle>mvn:org.atmosphere/atmosphere-annotations/2.2.6</bundle>
        <bundle>mvn:org.atmosphere/atmosphere-runtime/2.2.6</bundle>
        <bundle>mvn:org.atmosphere/atmosphere-jersey/2.2.6</bundle>-->
        <bundle start="true">mvn:com.bytex.snamp/http-gateway/${snamp.gateway.http.version}</bundle>
    </feature>

    <feature name="snamp-influx-gateway" description="SNAMP Gateway for InfluxDB" version="${snamp.gateway.influx.version}">
        <feature version="[${snamp.version}, ${snamp.maxVersion})">snamp-core</feature>
        <bundle start="true">mvn:com.bytex.snamp/influx-gateway/${snamp.gateway.influx.version}</bundle>
    </feature>

    <feature name="snamp-jmx-gateway" description="SNAMP JMX Gateway" version="${snamp.gateway.jmx.version}">
        <details>Exposes monitoring and management information provided by connectors via JMX</details>
        <details>${project.description}</details>
        <feature version="[${snamp.version}, ${snamp.maxVersion})">snamp-core</feature>
        <bundle start="true">mvn:com.bytex.snamp/jmx-gateway/${snamp.gateway.jmx.version}</bundle>
    </feature>

    <feature name="snamp-nagios-gateway" description="SNAMP Gateway for Nagios (active check)" version="${snamp.gateway.nagios.version}">
        <feature version="[${snamp.version}, ${snamp.maxVersion})">snamp-core</feature>
        <feature version="[${snamp.version}, ${snamp.maxVersion})">snamp-web-support</feature>
        <bundle start="true">mvn:com.bytex.snamp/nagios-gateway/${snamp.gateway.nagios.version}</bundle>
    </feature>

    <feature name="snamp-nrdp-gateway" description="SNAMP Gateway for Nagios (passive check via NRDP)" version="${snamp.gateway.nrdp.version}">
        <feature version="[${snamp.version}, ${snamp.maxVersion})">snamp-core</feature>
        <bundle start="true">mvn:com.bytex.snamp/nrdp-gateway/${snamp.gateway.nrdp.version}</bundle>
    </feature>

    <feature name="snamp-nsca-gateway" description="SNAMP Gateway for Nagios (passive check via NSCA)" version="${snamp.gateway.nsca.version}">
        <feature version="[${snamp.version}, ${snamp.maxVersion})">snamp-core</feature>
        <bundle start="true">mvn:com.bytex.snamp/nsca-gateway/${snamp.gateway.nsca.version}</bundle>
    </feature>

    <feature name="snamp-snmp-gateway" description="SNAMP SNMPv2/SNMPv3 Gateway" version="${snamp.gateway.snmp.version}">
        <details>Exposes monitoring and management information provided by connectors via SNMPv2/SNMPv3</details>
        <feature version="[${snamp.version}, ${snamp.maxVersion})">snamp-core</feature>
        <feature version="[${snamp.version}, ${snamp.maxVersion})">snamp-snmp-support</feature>
        <feature version="[${karaf.version}, ${karaf.maxVersion})">jndi</feature>
        <bundle start="true">mvn:com.bytex.snamp/snmp-gateway/${snamp.gateway.snmp.version}</bundle>
    </feature>

    <feature name="snamp-ssh-gateway" description="SNAMP SSH Gateway" version="${snamp.gateway.ssh.version}">
        <details>Exposes monitoring and management information provided by connectors via SSH</details>
        <feature version="[${snamp.version}, ${snamp.maxVersion})">snamp-core</feature>
        <feature version="[${snamp.version}, ${snamp.maxVersion})">snamp-jmx-support</feature>
        <feature version="[${snamp.version}, ${snamp.maxVersion})">snamp-ssh-support</feature>
        <bundle start="true">mvn:com.bytex.snamp/ssh-gateway/${snamp.gateway.ssh.version}</bundle>
    </feature>

    <feature name="snamp-syslog-gateway" description="SNAMP SysLog Gateway" version="${snamp.gateway.syslog.version}">
        <feature version="[${snamp.version}, ${snamp.maxVersion})">snamp-core</feature>
        <bundle start="true">mvn:com.bytex.snamp/syslog-gateway/${snamp.gateway.syslog.version}</bundle>
    </feature>

    <feature name="snamp-xmpp-gateway" description="SNAMP XMPP Gateway" version="${snamp.gateway.xmpp.version}">
        <feature version="[${snamp.version}, ${snamp.maxVersion})">snamp-core</feature>
        <feature version="[${snamp.version}, ${snamp.maxVersion})">snamp-security-support</feature>
        <feature version="[${snamp.version}, ${snamp.maxVersion})">snamp-jmx-support</feature>
        <bundle>mvn:com.bytex.snamp/xmpp-gateway/${snamp.gateway.xmpp.version}</bundle>
    </feature>
</features>
