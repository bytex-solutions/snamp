<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>io.snamp.gateways</groupId>
        <artifactId>gateways</artifactId>
        <version>2.0.0</version>
        <relativePath>../pom.xml</relativePath>
    </parent>
    <artifactId>smtp</artifactId>
    <version>${snamp.gateway.smtp.version}</version>
    <packaging>bundle</packaging>
    <name>SMTP Gateway</name>
    <description>Gateway that exposes notifications via SMTP protocol</description>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>snamp-${project.artifactId}-gateway</Bundle-SymbolicName>
                        <Bundle-Activator>com.bytex.snamp.gateway.smtp.SmtpGatewayActivator</Bundle-Activator>
                        <Export-Package/>
                        <!--SNAMP specific header-->
                        <Provide-Capability>com.bytex.snamp.gateway; type=smtp</Provide-Capability>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <dependencies>
        <dependency>
            <scope>provided</scope>
            <groupId>io.snamp</groupId>
            <artifactId>framework</artifactId>
            <version>${snamp.version}</version>
        </dependency>
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.core</artifactId>
        </dependency>
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.compendium</artifactId>
        </dependency>
        <dependency>
            <groupId>com.google.code.findbugs</groupId>
            <artifactId>jsr305</artifactId>
        </dependency>
        <dependency>
            <groupId>com.google.guava</groupId>
            <artifactId>guava</artifactId>
        </dependency>
        <dependency>
            <groupId>javax.mail</groupId>
            <artifactId>mail</artifactId>
            <scope>provided</scope>
            <version>${javax.mail.version}</version>
        </dependency>
        <dependency>
            <groupId>org.codehaus.jackson</groupId>
            <artifactId>jackson-mapper-asl</artifactId>
        </dependency>
        <dependency>
            <groupId>io.snamp</groupId>
            <artifactId>json-helpers</artifactId>
            <version>${snamp.json.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>io.snamp.osgi</groupId>
            <artifactId>stringtemplate4</artifactId>
            <version>${stringtemplate.version}</version>
            <scope>provided</scope>
        </dependency>
        <!--Test dependencies-->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
        </dependency>
    </dependencies>
</project>