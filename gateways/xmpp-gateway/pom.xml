<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.bytex.snamp</groupId>
    <artifactId>gateways</artifactId>
    <version>2.0.0</version>
  </parent>
  <artifactId>xmpp-gateway</artifactId>
  <version>2.0.0</version>
  <packaging>bundle</packaging>
  <name>XMPP Gateway</name>
  <description>SNAMP Gateway for XMPP protocol</description>
  <properties>
    <smack.version>4.1.0</smack.version>
  </properties>
  <dependencies>
    <dependency>
      <groupId>com.bytex.snamp</groupId>
      <artifactId>framework</artifactId>
      <version>2.0.0</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.osgi</groupId>
      <artifactId>org.osgi.core</artifactId>
    </dependency>
    <dependency>
      <groupId>org.osgi</groupId>
      <artifactId>org.osgi.compendium</artifactId>
    </dependency>
    <dependency>
      <groupId>com.google.guava</groupId>
      <artifactId>guava</artifactId>
    </dependency>
    <dependency>
      <groupId>org.igniterealtime.smack</groupId>
      <artifactId>smack-im</artifactId>
      <version>4.1.0</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.igniterealtime.smack</groupId>
      <artifactId>smack-java7</artifactId>
      <version>4.1.0</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.igniterealtime.smack</groupId>
      <artifactId>smack-tcp</artifactId>
      <version>4.1.0</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.igniterealtime.smack</groupId>
      <artifactId>smack-extensions</artifactId>
      <version>4.1.0</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>commons-cli</groupId>
      <artifactId>commons-cli</artifactId>
      <version>1.2</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>com.bytex.snamp</groupId>
      <artifactId>json-helpers</artifactId>
      <version>2.0.0</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.codehaus.jackson</groupId>
      <artifactId>jackson-mapper-asl</artifactId>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Bundle-SymbolicName>snamp-${project.artifactId}</Bundle-SymbolicName>
            <Bundle-Activator>com.bytex.snamp.gateway.xmpp.XMPPGatewayActivator</Bundle-Activator>
            <Export-Package>com.bytex.snamp.gateway.xmpp.client.*</Export-Package>
            <Import-Package>com.bytex.snamp,
                            com.bytex.snamp.concurrent,
                            com.bytex.snamp.configuration,
                            com.bytex.snamp.connector.attributes,
                            com.bytex.snamp.core,
                            com.bytex.snamp.gateway,
                            com.bytex.snamp.gateway.modeling,
                            com.bytex.snamp.internal,
                            com.bytex.snamp.jmx,
                            com.bytex.snamp.jmx.json,
                            com.google.common.base,
                            com.google.common.collect,
                            org.codehaus.jackson.map,
                            javax.management,
                            javax.management.openmbean,
                            javax.net.ssl</Import-Package>
            <Provide-Capability>com.bytex.snamp.gateway; type=xmpp</Provide-Capability>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
