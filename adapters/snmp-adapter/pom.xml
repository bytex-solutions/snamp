<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.itworks.snamp</groupId>
    <artifactId>adapters</artifactId>
    <version>1.0.0</version>
  </parent>
  <artifactId>snmp</artifactId>
  <version>1.0.0</version>
  <packaging>bundle</packaging>
  <name>SNMP Resource Adapter</name>
  <description>Resource adapter that exposes managed resource via SNMPv2 and SNMPv3 protocols.</description>
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <endorsed.dir>${project.build.directory}/endorsed</endorsed.dir>
  </properties>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>com.itworks.snamp.adapters.snmp</Bundle-SymbolicName>
                        <Export-Package/>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>
  <dependencies>
      <dependency>
          <scope>provided</scope>
          <groupId>com.itworks.snamp</groupId>
          <artifactId>framework</artifactId>
          <version>1.0.0</version>
      </dependency>
      <dependency>
          <scope>provided</scope>
          <groupId>com.itworks.snamp</groupId>
          <artifactId>snmp4j</artifactId>
          <version>2.2.3</version>
      </dependency>
    <dependency>
      <groupId>org.snmp4j</groupId>
      <artifactId>snmp4j-agent</artifactId>
      <version>2.0.10a</version>
    </dependency>
      <dependency>
          <scope>provided</scope>
          <groupId>org.osgi</groupId>
          <artifactId>org.osgi.core</artifactId>
          <version>4.3.1</version>
      </dependency>
      <dependency>
          <scope>provided</scope>
          <groupId>org.osgi</groupId>
          <artifactId>org.osgi.compendium</artifactId>
          <version>4.3.1</version>
      </dependency>
  </dependencies>
</project>
