        <!--SNAMP dependencies-->
        <bundle start="true">mvn:org.apache.geronimo.specs/geronimo-servlet_3.0_spec/1.0</bundle>
        <bundle start="true">mvn:com.sun.jersey/jersey-core/${jersey.version}</bundle>
        <bundle start="true">mvn:com.sun.jersey/jersey-server/${jersey.version}</bundle>
        <bundle start="true">mvn:com.sun.jersey/jersey-servlet/${jersey.version}</bundle>
        <bundle start="true">mvn:com.bytex.snamp/webconsole/${snamp.webconsole.version}</bundle>
