<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<features xmlns="http://karaf.apache.org/xmlns/features/v1.4.0" name="snamp-standard">
    <repository>mvn:com.bytex.snamp.features/core/${snamp.version}/xml/features</repository>

    <feature name="snamp-management" description="SNAMP management tools" version="${snamp.management.version}" install="auto">
        <feature version="[${snamp.version}, ${snamp.maxVersion})">snamp-core</feature>
        <feature version="[${snamp.version}, ${snamp.maxVersion})">snamp-web-support</feature>
        <bundle start="true">mvn:com.bytex.snamp/management/${snamp.management.version}</bundle>
    </feature>

    <feature name="snamp-data-analysis" description="Data Analysis services" version="${snamp.analysis.version}" install="auto">
        <feature version="[${snamp.version}, ${snamp.maxVersion})">snamp-framework</feature>
        <feature version="${snamp.instrumentation.version}">snamp-instrumentation</feature>
        <feature version="${snamp.version}">snamp-scripting-support</feature>
        <bundle>mvn:com.googlecode.concurrentlinkedhashmap/concurrentlinkedhashmap-lru/${concurrentlinkedhashmap.version}</bundle>
        <bundle start="true">mvn:com.bytex.snamp/data-analysis/${snamp.analysis.version}</bundle>
    </feature>

    <feature name="snamp-web-console" description="SNAMP Web Console" version="${snamp.webconsole.version}" install="auto" >
        <feature version="[${snamp.version}, ${snamp.maxVersion})" prerequisite="true">snamp-core</feature>
        <feature version="[${snamp.version}, ${snamp.maxVersion})" >snamp-web-support</feature>
        <feature version="${snamp.analysis.version}">snamp-data-analysis</feature>
        <bundle>mvn:org.ops4j.pax.logging/pax-logging-api/1.8.5</bundle>
        <bundle start="true">mvn:com.bytex.snamp/webconsole/${snamp.webconsole.version}</bundle>
    </feature>
</features>
