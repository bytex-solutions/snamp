    <name>JMX Adapter Karaf Feature</name>
    <artifactId>jmx-adapter-feature</artifactId>
    <version>1.0.0</version>
    <description>JMX Adapter in the form of Apache Karaf Feature</description>
    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.apache.karaf.tooling</groupId>
                <artifactId>karaf-maven-plugin</artifactId>
                <version>3.0.3</version>
                <configuration>
                    <featuresFile>${project.basedir}/src/main/resources/features.xml</featuresFile>
                </configuration>
            </plugin>
