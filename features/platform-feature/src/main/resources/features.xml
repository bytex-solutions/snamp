<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<features xmlns="http://karaf.apache.org/xmlns/features/v1.2.0" name="snamp">
    <repository>mvn:org.apache.karaf.features/standard/${karaf.version}/xml/features</repository>
    <feature name="${project.artifactId}" description="${project.name}" version="${project.version}">
        <details>${project.description}</details>
        <!-- Third-party features -->
        <feature version="[${karaf.version}, ${karaf.maxVersion})">eventadmin</feature>
        <feature version="[${karaf.version}, ${karaf.maxVersion})">war</feature>
        <feature version="[${jolokia.version}, 2)">jolokia</feature>
        <!-- Third-party bundles -->
        <bundle>mvn:com.google.code.gson/gson/${gson.version}</bundle>
        <bundle>mvn:com.google.guava/guava/${guava.version}</bundle>
        <bundle start="true">mvn:com.hazelcast/hazelcast/${hazelcast.version}</bundle>
        <!--SNAMP dependencies-->
        <bundle>mvn:com.bytex.snamp/framework/${snamp.framework.version}</bundle>
        <bundle start="true">mvn:com.bytex.snamp/management/${snamp.management.version}</bundle>
        <bundle start="true">mvn:com.bytex.snamp/jaas-config/${snamp.jaasconfig.version}</bundle>
        <bundle start="true">mvn:com.bytex.snamp/jmx-helpers/${snamp.jmxhelper.version}</bundle>
    </feature>
</features>
