<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<features xmlns="http://karaf.apache.org/xmlns/features/v1.2.0" name="snamp">
    <repository>mvn:io.hawt/hawtio-karaf/1.4.47/xml/features</repository>
    <feature name="${project.artifactId}" description="SNAMP Platform" version="${project.version}">
        <details>Basic set of features required to support SNAMP platform</details>
        <!-- Third-party features -->
        <feature>eventadmin</feature>
        <!-- Third-party bundles -->
        <bundle>mvn:com.google.code.gson/gson/${gson.version}</bundle>
        <bundle>mvn:com.google.guava/guava/${guava.version}</bundle>
        <!--SNAMP dependencies-->
        <bundle>mvn:com.itworks.snamp/framework/${snamp.framework.version}</bundle>
        <bundle start="true">mvn:com.itworks.snamp/management/${snamp.management.version}</bundle>
        <bundle start="true">mvn:com.itworks.snamp/jaas-config/${snamp.jaasconfig.version}</bundle>
        <bundle>mvn:com.itworks.snamp/jmx-helpers/${snamp.jmxhelper.version}</bundle>
    </feature>
</features>
