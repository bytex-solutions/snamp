<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<features xmlns="http://karaf.apache.org/xmlns/features/v1.2.0" name="connectors">
    <repository>mvn:org.apache.karaf.features/standard/${karaf.version}/xml/features</repository>
    <repository>mvn:org.apache.karaf.features/framework/${karaf.version}/xml/features</repository>

    <feature name="composite-connector" description="Composite Connector Karaf Feature" version="${project.version}">
        <feature version="${project.version}">snamp-core</feature>
        <bundle start="true">mvn:com.bytex.snamp/composite-connector/${project.version}</bundle>
    </feature>

    <feature name="groovy-connector" description="Groovy Resource Karaf Feature" version="${project.version}">
        <feature version="${project.version}">snamp-core</feature>
        <feature version="${project.version}">snamp-scripting-support</feature>
        <bundle start="true">mvn:com.bytex.snamp/groovy-connector/${project.version}</bundle>
    </feature>

    <feature name="http-acceptor" description="HTTP Acceptor Karaf Feature" version="${project.version}">
        <feature version="${project.version}">snamp-core</feature>
        <feature version="${project.version}">snamp-web-support</feature>
        <feature version="${project.version}">snamp-message-processing</feature>
        <bundle start="true">mvn:com.bytex.snamp/http-acceptor/${project.version}</bundle>
    </feature>

    <feature name="jmx-connector" description="JMX Connector Karaf Feature" version="${project.version}">
        <feature version="${project.version}">snamp-core</feature>
        <bundle start="true">mvn:com.bytex.snamp/jmx-connector/${project.version}</bundle>
    </feature>

    <feature name="modbus-connector" description="Modbus Connector Karaf Feature" version="${project.version}">
        <feature version="${project.version}">snamp-core</feature>
        <bundle start="true">mvn:com.bytex.snamp/modbus-connector/${project.version}</bundle>
    </feature>

    <feature name="rshell-connector" description="RShell Connector Karaf Feature" version="${project.version}">
        <feature version="${project.version}">snamp-core</feature>
        <feature version="${project.version}">snamp-ssh-support</feature>
        <bundle start="true">mvn:com.bytex.snamp/rshell-connector/${project.version}</bundle>
    </feature>

    <feature name="snmp-connector" description="SNMP Connector Karaf Feature" version="${project.version}">
        <feature version="${project.version}">snamp-core</feature>
        <bundle>mvn:com.bytex.snamp/snmp4j/${snmp4j.version}</bundle>
        <bundle>mvn:com.bytex.snamp/snmp-connector/${project.version}</bundle>
    </feature>

    <feature name="zipkin-connector" description="Zipkin Connector Karaf Feature" version="${project.version}">
        <feature version="${project.version}">snamp-core</feature>
        <feature version="${project.version}">snamp-web-support</feature>
        <bundle>mvn:io.zipkin.java/zipkin/1.16.2</bundle>
        <bundle>mvn:com.bytex.snamp/zipkin-connector/${project.version}</bundle>
    </feature>
</features>
