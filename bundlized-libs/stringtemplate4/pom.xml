<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.bytex.snamp.osgi</groupId>
    <artifactId>bundlized-libs</artifactId>
    <version>2.0.0</version>
  </parent>
  <artifactId>stringtemplate4</artifactId>
  <version>4.0.8</version>
  <packaging>bundle</packaging>
  <name>StringTemplate</name>
  <description>Bundlized version of ST4 library</description>
  <organization>
    <name>antlrworks</name>
    <url>http://www.stringtemplate.org/</url>
  </organization>
  <dependencies>
    <dependency>
      <groupId>org.antlr</groupId>
      <artifactId>antlr-runtime</artifactId>
      <version>3.5.2</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.antlr</groupId>
      <artifactId>ST4</artifactId>
      <version>4.0.8</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <artifactSet>
            <excludes />
          </artifactSet>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
            <Export-Package>org.stringtemplate.v4,
                            org.stringtemplate.v4.compiler,
                            org.stringtemplate.v4.debug,
                            org.stringtemplate.v4.misc,
                            org.stringtemplate.v4.adaptors,
                            org.antlr.runtime,
                            org.antlr.runtime.tree</Export-Package>
            <Import-Package>javax.management.openmbean</Import-Package>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
