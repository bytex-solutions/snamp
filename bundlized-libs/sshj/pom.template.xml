<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>bundlized-libs</artifactId>
        <groupId>com.bytex.snamp.osgi</groupId>
        <version>2.0.0</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <description>Bundlized version of SSHJ library</description>
    <artifactId>sshj</artifactId>
    <name>SSHJ</name>
    <version>${sshj.version}</version>
    <packaging>bundle</packaging>
    <organization>
        <name>schmizz.net</name>
        <url>https://github.com/hierynomus/sshj</url>
    </organization>
    <build>
        <plugins>
            <plugin>
                <artifactId>maven-shade-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Export-Package>
                            net.schmizz.concurrent,
                            net.schmizz.sshj,
                            net.schmizz.keepalive,
                            net.schmizz.sshj.common,
                            net.schmizz.sshj.connection,
                            net.schmizz.sshj.connection.channel,
                            net.schmizz.sshj.connection.channel.direct,
                            net.schmizz.sshj.connection.channel.forwarded,
                            net.schmizz.sshj.sftp,
                            net.schmizz.sshj.signature,
                            net.schmizz.sshj.transport,
                            net.schmizz.sshj.xfer,
                            net.schmizz.sshj.userauth,
                            net.schmizz.sshj.userauth.keyprovider,
                            net.schmizz.sshj.userauth.method,
                            net.schmizz.sshj.userauth.password
                        </Export-Package>
                        <Import-Package>
                            javax.crypto,
                            javax.crypto.interfaces,
                            javax.crypto.spec,
                            net.i2p.crypto.eddsa.spec,
                            javax.net,
                            org.slf4j,
                            org.slf4j.helpers
                        </Import-Package>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <dependencies>
        <dependency>
            <groupId>com.hierynomus</groupId>
            <artifactId>sshj</artifactId>
            <version>${sshj.version}</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.jcraft</groupId>
            <artifactId>jzlib</artifactId>
            <version>1.1.3</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.bouncycastle</groupId>
            <artifactId>bcprov-jdk15on</artifactId>
            <version>${bouncycastle.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.bouncycastle</groupId>
            <artifactId>bcpkix-jdk15on</artifactId>
            <version>${bouncycastle.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>${slf4j.api.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>net.i2p.crypto</groupId>
            <artifactId>eddsa</artifactId>
            <scope>provided</scope>
        </dependency>
    </dependencies>
</project>