<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.bytex.snamp</groupId>
        <artifactId>snamp</artifactId>
        <version>2.0.0</version>
        <relativePath>../../../pom.xml</relativePath>
    </parent>
    <artifactId>snmp4j</artifactId>
    <version>${snmp4j.version}</version>
    <packaging>bundle</packaging>
    <name>SNMP4J</name>
    <description>Bundlized version of SNMP4J library</description>
    <organization>
        <name>snmp4.org</name>
        <url>http://www.snmp4j.org</url>
    </organization>
    <dependencies>
        <dependency>
            <groupId>org.snmp4j</groupId>
            <artifactId>snmp4j-agent</artifactId>
            <version>${snmp4j.version}</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.snmp4j</groupId>
            <artifactId>snmp4j-agent</artifactId>
            <version>${snmp4j.version}</version>
            <classifier>sources</classifier>
            <scope>provided</scope>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <configuration>
                    <artifactSet>
                        <excludes>
                            <exclude>log4j:log4j:jar:</exclude>
                            <exclude>org.snmp4j:snmp4j:jar:</exclude>
                            <exclude>org.snmp4j:snmp4j:sources:</exclude>
                            <exclude>org.snmp4j:snmp4j-agent:sources:</exclude>
                        </excludes>
                    </artifactSet>
                </configuration>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Export-Package>
                            org.snmp4j.*;-split-package:=merge-first,
                            !org.snmp4j.asn1.doc-files,
                            !org.snmp4j.doc-files,
                            !org.snmp4j.mp.doc-files,
                            !org.snmp4j.security.doc-files,
                            !org.snmp4j.smi.doc-files,
                            !org.snmp4j.transport.doc-files,
                            !org.snmp4j.util.doc-files
                        </Export-Package>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
