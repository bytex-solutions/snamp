<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>snamp</artifactId>
        <groupId>com.itworks.snamp</groupId>
        <version>1.0.0</version>
        <relativePath>../../../pom.xml</relativePath>
    </parent>
    <packaging>bundle</packaging>
    <name>SNMP4J</name>
    <description>Bundlized version of SNMP4J library</description>
    <organization>
        <name>snmp4.org</name>
        <url>http://www.snmp4j.org</url>
    </organization>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>snmp4j</artifactId>
    <version>${snmp4j.version}</version>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>org.snmp4j</Bundle-SymbolicName>
                        <Export-Package>
                            org.snmp4j.*;
                        </Export-Package>
                        <Embed-Dependency>snmp4j; snmp4j-agent</Embed-Dependency>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <dependencies>
        <dependency>
            <groupId>org.snmp4j</groupId>
            <artifactId>snmp4j-agent</artifactId>
            <version>${snmp4j.version}</version>
        </dependency>
        <dependency>
            <groupId>org.snmp4j</groupId>
            <artifactId>snmp4j</artifactId>
            <version>${snmp4j.version}</version>
        </dependency>
        <dependency>
            <scope>provided</scope>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.compendium</artifactId>
            <version>${osgi.version}</version>
        </dependency>
        <dependency>
            <scope>provided</scope>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.core</artifactId>
            <version>${osgi.version}</version>
        </dependency>
    </dependencies>
    <repositories>
        <repository>
            <id>oosnmpRepo</id>
            <name>OOSNMP.COM Repository</name>
            <url>https://server.oosnmp.net/dist/release</url>
        </repository>
    </repositories>
</project>