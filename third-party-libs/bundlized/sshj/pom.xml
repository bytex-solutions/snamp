<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>snamp</artifactId>
        <groupId>com.bytex.snamp</groupId>
        <version>1.0.0</version>
        <relativePath>../../../pom.xml</relativePath>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <description>Bundlized version of SSHJ library</description>
    <artifactId>sshj</artifactId>
    <name>SSHJ</name>
    <version>${sshj.version}</version>
    <packaging>bundle</packaging>
    <organization>
        <name>schmizz.net</name>
        <url>https://github.com/hierynomus/sshj</url>
    </organization>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>net.schmizz</Bundle-SymbolicName>
                        <Embed-Dependency>
                            *;scope=compile
                        </Embed-Dependency>
                        <Export-Package>net.schmizz.*;org.bouncycastle.jce.provider;org.bouncycastle.crypto.prng</Export-Package>
                        <Embed-Transitive>true</Embed-Transitive>
                        <Import-Package>
                            !javax.swing.*,
                            !groovy.*,
                            !org.codehaus.*,
                            !javax.jms.*,
                            !javax.mail.*,
                            !javax.servlet.*,
                            !sun.*,
                            !com.sun.*,
                            !org.apache.oro.*,
                            *
                        </Import-Package>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <dependencies>
        <dependency>
            <groupId>net.schmizz</groupId>
            <artifactId>sshj</artifactId>
            <version>${sshj.version}</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.jcraft</groupId>
            <artifactId>jzlib</artifactId>
            <version>1.1.3</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.bouncycastle</groupId>
            <artifactId>bcprov-jdk15on</artifactId>
            <version>${bouncycastle.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.bouncycastle</groupId>
            <artifactId>bcpkix-jdk15on</artifactId>
            <version>${bouncycastle.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>1.7.7</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>
</project>