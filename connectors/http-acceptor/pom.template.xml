<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>connectors</artifactId>
        <groupId>io.snamp.connectors</groupId>
        <version>2.0.0</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <name>HTTP Acceptor</name>
    <description>SNAMP Connector that accepts data using HTTP passive check</description>
    <artifactId>http</artifactId>
    <packaging>bundle</packaging>
    <version>${snamp.connector.http.version}</version>
    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>snamp-${project.artifactId}-acceptor</Bundle-SymbolicName>
                        <Bundle-Activator>com.bytex.snamp.connector.http.HttpAcceptorActivator</Bundle-Activator>
                        <Export-Package />
                        <DynamicImport-Package>*</DynamicImport-Package>
                        <Provide-Capability>com.bytex.snamp.connector; type=http</Provide-Capability>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <dependencies>
        <dependency>
            <groupId>io.snamp</groupId>
            <artifactId>framework</artifactId>
            <version>${snamp.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>io.snamp.connectors</groupId>
            <artifactId>data-stream</artifactId>
            <version>${snamp.connector.stream.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>io.snamp.instrumentation</groupId>
            <artifactId>core</artifactId>
            <version>${snamp.instrumentation.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.core</artifactId>
        </dependency>
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.compendium</artifactId>
        </dependency>
        <dependency>
            <groupId>com.google.guava</groupId>
            <artifactId>guava</artifactId>
        </dependency>
        <dependency>
            <groupId>com.sun.jersey</groupId>
            <artifactId>jersey-servlet</artifactId>
        </dependency>
        <dependency>
            <groupId>org.codehaus.jackson</groupId>
            <artifactId>jackson-mapper-asl</artifactId>
        </dependency>
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>javax.servlet-api</artifactId>
        </dependency>
        <dependency>
            <groupId>org.codehaus.groovy</groupId>
            <artifactId>groovy</artifactId>
            <classifier>indy</classifier>
        </dependency>
        <dependency>
            <groupId>org.codehaus.groovy</groupId>
            <artifactId>groovy-json</artifactId>
            <version>${groovy.version}</version>
            <classifier>indy</classifier>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>io.snamp</groupId>
            <artifactId>groovy-xml-bridge</artifactId>
            <version>${snamp.scripting.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.codehaus.groovy</groupId>
            <artifactId>groovy-xml</artifactId>
            <classifier>indy</classifier>
        </dependency>
        <dependency>
            <groupId>com.google.code.findbugs</groupId>
            <artifactId>jsr305</artifactId>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
        </dependency>
    </dependencies>
</project>