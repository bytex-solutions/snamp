<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>connectors</artifactId>
        <groupId>com.bytex.snamp.connectors</groupId>
        <version>2.0.0</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>groovy</artifactId>
    <version>${snamp.connector.groovy.version}</version>
    <packaging>bundle</packaging>
    <name>Groovy Script Resource</name>
    <description>SNAMP resource connector used for Groovy scripts for management information aggregation</description>
    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
            </resource>
        </resources>
        <testResources>
            <testResource>
                <directory>src/test/resources</directory>
            </testResource>
        </testResources>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>snamp-${project.artifactId}</Bundle-SymbolicName>
                        <Bundle-Activator>com.bytex.snamp.connector.groovy.GroovyResourceActivator</Bundle-Activator>
                        <Export-Package>
                            com.bytex.snamp.connector.groovy
                        </Export-Package>
                        <DynamicImport-Package>*</DynamicImport-Package>
                        <!--SNAMP specific header-->
                        <Provide-Capability>com.bytex.snamp.connector; type=groovy</Provide-Capability>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <dependencies>
        <dependency>
            <groupId>com.bytex.snamp</groupId>
            <artifactId>framework</artifactId>
            <version>${snamp.version}</version>
        </dependency>
        <dependency>
            <groupId>com.bytex.snamp</groupId>
            <artifactId>scripting</artifactId>
            <version>${snamp.scripting.version}</version>
        </dependency>
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.core</artifactId>
        </dependency>
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.compendium</artifactId>
        </dependency>
        <dependency>
            <groupId>com.google.guava</groupId>
            <artifactId>guava</artifactId>
        </dependency>
        <!-- Groovy Dependencies -->
        <dependency>
            <groupId>org.codehaus.groovy</groupId>
            <artifactId>groovy</artifactId>
            <classifier>indy</classifier>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>org.apache.ivy</groupId>
            <artifactId>ivy</artifactId>
        </dependency>
        <!--Test dependencies-->
        <dependency>
            <groupId>com.bytex.snamp</groupId>
            <artifactId>internal-services</artifactId>
            <version>${snamp.services.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
        </dependency>
    </dependencies>
</project>