<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>connectors</artifactId>
        <groupId>com.bytex.snamp</groupId>
        <version>2.0.0</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>zipkin-connector</artifactId>
    <version>${snamp.connector.zipkin.version}</version>
    <packaging>bundle</packaging>
    <name>Zipkin Connector</name>
    <description>SNAMP resource connector that can handle Zipkin spans</description>
    <dependencies>
        <dependency>
            <groupId>com.bytex.snamp</groupId>
            <artifactId>framework</artifactId>
            <version>${snamp.framework.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.core</artifactId>
        </dependency>
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.compendium</artifactId>
        </dependency>
        <dependency>
            <groupId>com.google.guava</groupId>
            <artifactId>guava</artifactId>
        </dependency>
        <dependency>
            <groupId>com.bytex.snamp</groupId>
            <artifactId>message-driven-connector</artifactId>
            <version>${snamp.connector.md.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.bytex.snamp</groupId>
            <artifactId>instrumentation-core</artifactId>
            <version>${snamp.instrumentation.version}</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>com.bytex.snamp.connector.zipkin</Bundle-SymbolicName>
                        <Bundle-Activator>com.bytex.snamp.connector.zipkin.ZipkinConnectorActivator</Bundle-Activator>
                        <Export-Package />
                        <Provide-Capability>com.bytex.snamp.connector; type=zipkin</Provide-Capability>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>


</project>