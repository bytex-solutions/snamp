<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.bytex.snamp</groupId>
    <artifactId>connectors</artifactId>
    <version>2.0.0</version>
  </parent>
  <artifactId>zipkin-connector</artifactId>
  <version>2.0.0</version>
  <packaging>bundle</packaging>
  <name>Zipkin Connector</name>
  <description>SNAMP resource connector that can handle Zipkin spans</description>
  <properties>
    <thrift.version>0.9.3</thrift.version>
    <zipkin.version>1.16.2</zipkin.version>
  </properties>
  <dependencies>
    <dependency>
      <groupId>org.apache.thrift</groupId>
      <artifactId>libthrift</artifactId>
      <version>0.9.3</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>com.bytex.snamp</groupId>
      <artifactId>framework</artifactId>
      <version>2.0.0</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.osgi</groupId>
      <artifactId>org.osgi.core</artifactId>
    </dependency>
    <dependency>
      <groupId>org.osgi</groupId>
      <artifactId>org.osgi.compendium</artifactId>
    </dependency>
    <dependency>
      <groupId>com.google.guava</groupId>
      <artifactId>guava</artifactId>
    </dependency>
    <dependency>
      <groupId>com.bytex.snamp</groupId>
      <artifactId>data-stream-processing</artifactId>
      <version>2.0.0</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>com.bytex.snamp.instrumentation</groupId>
      <artifactId>core</artifactId>
      <version>1.0.0</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>io.zipkin.java</groupId>
      <artifactId>zipkin-collector-kafka</artifactId>
      <version>1.16.2</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>io.zipkin.java</groupId>
      <artifactId>zipkin</artifactId>
      <version>1.16.2</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.codehaus.groovy</groupId>
      <artifactId>groovy</artifactId>
      <classifier>indy</classifier>
    </dependency>
    <dependency>
      <groupId>com.sun.jersey</groupId>
      <artifactId>jersey-server</artifactId>
    </dependency>
    <dependency>
      <groupId>com.sun.jersey</groupId>
      <artifactId>jersey-servlet</artifactId>
    </dependency>
    <dependency>
      <groupId>com.sun.jersey</groupId>
      <artifactId>jersey-core</artifactId>
    </dependency>
    <dependency>
      <groupId>com.sun.jersey</groupId>
      <artifactId>jersey-json</artifactId>
    </dependency>
    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>javax.servlet-api</artifactId>
    </dependency>
    <dependency>
      <groupId>log4j</groupId>
      <artifactId>log4j</artifactId>
      <version>1.2.14</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
    </dependency>
    <dependency>
      <groupId>io.netty</groupId>
      <artifactId>netty</artifactId>
    </dependency>
  </dependencies>
  <build>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <artifactSet>
            <excludes>
              <exclude>org.slf4j:slf4j-log4j12:jar:</exclude>
              <exclude>log4j:log4j:jar:</exclude>
              <exclude>net.jpountz.lz4:lz4:jar:</exclude>
              <exclude>io.netty:netty:jar:</exclude>
            </excludes>
          </artifactSet>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Bundle-SymbolicName>snamp-${project.artifactId}</Bundle-SymbolicName>
            <Bundle-Activator>com.bytex.snamp.connector.zipkin.ZipkinConnectorActivator</Bundle-Activator>
            <Export-Package>com.bytex.snamp.connector.zipkin.embedding</Export-Package>
            <Import-Package>com.bytex.snamp.concurrent,
                com.bytex.snamp.instrumentation.measurements,
                com.bytex.snamp,
                com.bytex.snamp.io,
                com.bytex.snamp.connector,
                com.bytex.snamp.connector.dsp,
                com.bytex.snamp.connector.dsp.groovy,
                com.bytex.snamp.connector.dsp.notifications,
                com.bytex.snamp.core,
                com.bytex.snamp.internal,
                com.google.common.base,
                com.google.common.collect,
                com.sun.jersey.api.container.filter,
                com.sun.jersey.api.core,
                com.sun.jersey.spi.container.servlet,
                groovy.lang,
                org.codehaus.groovy.transform,
                org.codehaus.groovy.reflection,
                org.codehaus.groovy.runtime,
                org.codehaus.groovy.runtime.powerassert,
                org.codehaus.groovy.vmplugin.v7,
                javax.management,
                javax.servlet,
                javax.ws.rs,
                javax.ws.rs.core,
                org.osgi.framework,
                org.osgi.service.http,
                zipkin,
                zipkin.collector,
                zipkin.internal,
                zipkin.storage,
                org.apache.log4j,
                org.slf4j,
                javax.security.sasl,
                javax.security.auth,
                javax.security.auth.login,
                javax.security.auth.callback,
                org.jboss.netty.channel,
                org.ietf.jgss</Import-Package>
            <DynamicImport-Package>*</DynamicImport-Package>
            <Provide-Capability>com.bytex.snamp.connector; type=zipkin</Provide-Capability>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
