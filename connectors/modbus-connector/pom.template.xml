<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>connectors</artifactId>
        <groupId>com.bytex.snamp.connectors</groupId>
        <version>2.0.0</version>
    </parent>
    <artifactId>modbus</artifactId>
    <modelVersion>4.0.0</modelVersion>
    <version>${snamp.connector.modbus.version}</version>
    <packaging>bundle</packaging>
    <name>Modbus Connector</name>
    <description>SNAMP resource connector for Modbus (over TCP and UDP) protocol</description>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>snamp-${project.artifactId}</Bundle-SymbolicName>
                        <Bundle-Activator>com.bytex.snamp.connector.modbus.ModbusResourceConnectorActivator</Bundle-Activator>
                        <Export-Package>
                            com.bytex.snamp.connector.modbus.transport,
                            com.bytex.snamp.connector.modbus.slave,
                            com.bytex.snamp.connector.modbus.master
                        </Export-Package>
                        <Embed-Dependency>
                            *;scope=system
                        </Embed-Dependency>
                        <Embed-Transitive>true</Embed-Transitive>
                        <Import-Package>
                            !gnu.io,
                            *
                        </Import-Package>
                        <!--SNAMP specific header-->
                        <Provide-Capability>com.bytex.snamp.connector; type=modbus</Provide-Capability>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <dependencies>
        <dependency>
            <scope>provided</scope>
            <groupId>com.bytex.snamp</groupId>
            <artifactId>framework</artifactId>
            <version>${snamp.version}</version>
        </dependency>
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.core</artifactId>
        </dependency>
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.compendium</artifactId>
        </dependency>
        <dependency>
            <groupId>com.google.guava</groupId>
            <artifactId>guava</artifactId>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
        </dependency>
        <dependency>
            <groupId>com.ghgande</groupId>
            <artifactId>j2mod</artifactId>
            <scope>system</scope>
            <version>1.0.6</version>
            <systemPath>${basedir}/lib/j2mod-1.06.jar</systemPath>
        </dependency>
    </dependencies>
</project>